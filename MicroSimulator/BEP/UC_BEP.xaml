<UserControl
    x:Class="MicroSimulator.BEP.UC_BEP"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="48"/>
        </Grid.RowDefinitions>

        <Grid x:Name="Grid_Simulator"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="Btn_NextStep" Content="Next Step" HorizontalAlignment="Center" Tapped="Button_Tapped" VerticalAlignment="Center" Margin="2,0,2,0"/>
            <Button x:Name="Btn_Start" Content="Start" Margin="2,0,2,0" Tapped="Btn_Start_Tapped"/>
            <Button x:Name="Btn_Stop" Content="Stop" Margin="2,0,2,0" Tapped="Btn_Stop_Tapped"/>
        </StackPanel>
    </Grid>
</UserControl>
